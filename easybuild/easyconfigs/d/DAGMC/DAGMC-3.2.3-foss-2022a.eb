name = 'DAGMC'
version = '3.2.3'

homepage = 'https://svalinn.github.io/DAGMC/index.html'
description = "Direct Accelerated Geometry Monte Carlo (DAGMC) is a software package that allows users to perform Monte Carlo radiation transport directly on CAD models."
software_license_urls = ['https://github.com/svalinn/DAGMC/blob/develop/LICENSE.txt']
toolchain = {'name': 'foss', 'version': '2022a'}

source_urls = ['https://github.com/svalinn/DAGMC/archive/']
sources = ['v%(version)s.tar.gz']
patches = ['DAGMC-3.2.3_turn_off_submodule_check.patch']

checksums = [
    'dfd6218614d201046b3943f9c93001eb6353ec38ced5deb302fffdcb39a65a96',
    'd84a26e8ef905bcbdd9f52be83af7c8f2e33bf1cdb7133fb83ef5b6d257e7dd5'
]

builddependencies = [('CMake', '3.23.1'),('make','4.3')]

dependencies = [
    ('HDF5', '1.12.2'),
    ('Eigen','3.4.0'),
    ('MOAB','5.5.0'),
    ('double-down','1.1.0')
]

easyblock = 'CMakeMake'

configopts = "-DMOAB_DIR=$EBROOTMOAB -DBUILDTALLY=ON -DDOUBLE_DOWN=ON -DBUILD_STATIC_EXE=OFF -DBUILD_STATIC_LIBS=OFF -DDOUBLE_DOWN_DIR=$EBROOTDOUBLEMINDOWN -DBUILD_UWUW=OFF"

sanity_check_paths = {
    'files': ['bin/build_obb', 'bin/check_watertight', 'bin/make_watertight', 'bin/overlap_check', 'bin/pt_vol_test', 
              'bin/ray_fire_test', 'bin/test_geom'],
    'dirs': ['bin','include','lib','lib64','tests'],
}